#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/samwillis/code/github.com/samjwillis97/f" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/samwillis/code/github.com/samjwillis97/f")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/samwillis/code/github.com/samjwillis97/f" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/samwillis/code/github.com/samjwillis97/f/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/samwillis/code/github.com/samjwillis97/f/.envrc" "/Users/samwillis/code/github.com/samjwillis97/f/.direnv"/*.rc
